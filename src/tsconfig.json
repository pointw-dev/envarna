
{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "moduleResolution": "Node",
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": false,
    "outDir": "dist",
    "rootDir": ".",
    "declaration": true,
    "strict": true,
    "skipLibCheck": true,
    "types": ["node"]
  },
  "include": [
    "index.ts", 
    "lib/**/*.ts", 
    "bin/**/*.ts"
  ],
  "exclude": ["tests","features"]
}
