{
  "name": "envarna",
  "version": "0.4.1",
  "description": "Settings managed. A powerful library for managing configuration details.",
  "repository": {
    "type": "git",
    "url": "https://github.com/pointw-dev/envarna"
  },
  "homepage": "https://pointw-dev.github.io/envarna",
  "keywords": [
    "settings",
    "dotenv",
    "zod"
  ],
  "type": "module",
  "exports": {
    ".": {
      "import": "./dist/esm/index.js",
      "require": "./dist/cjs/index.js",
      "types": "./dist/esm/index.d.ts"
    }
  },
  "bin": {
    "envarna": "./dist/esm/bin/envarna.js"
  },
  "types": "./dist/esm/index.d.ts",
  "scripts": {
    "test": "NODE_NO_WARNINGS=1 NODE_OPTIONS='--loader ts-node/esm' cucumber-js",
    "build:cjs": "tsc -p tsconfig.cjs.json",
    "build:esm": "tsc -p tsconfig.esm.json",
    "build": "npm run build:cjs && npm run build:esm",
    "prepare": "npm run build",
    "prepack": "npm run prepare"
  },
  "dependencies": {
    "change-case": "^4.0.0",
    "dotenv": "^10.0.0",
    "reflect-metadata": "^0.2.2",
    "ts-morph": "^25.0.1",
    "yaml": "^2.7.1",
    "yargs": "^17.7.2",
    "zod": "^3.0.0"
  },
  "devDependencies": {
    "@cucumber/cucumber": "^11.2.0",
    "@types/chai": "^5.2.2",
    "@types/dotenv": "^6.1.1",
    "@types/node": "^22.15.2",
    "@types/yargs": "^17.0.33",
    "chai": "^5.2.0",
    "ts-node": "^10.9.2",
    "typescript": "^5.0.0"
  },
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "engines": {
    "node": ">=18"
  }
}
